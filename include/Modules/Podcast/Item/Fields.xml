<array>
	<id>
		<type>hidden</type>
	</id>
	<publish>
        <type>checkbox</type>
        <label>&lt;span class='publish_label'&gt;PUBLISH&lt;/span&gt;</label>
        <default>1</default>
    </publish>
	<file_header>
		<type>header</type>
		<label>File Info</label>
	</file_header>	
	<podcast>
		<type>select</type>
		<label>Podcast</label>
        <lookup>
            <instance>podcasts</instance>
            <module>content</module>
        </lookup>
		<required>1</required>
	</podcast>
	<file>
		<type>select</type>
		<label>File Name</label>
		<required>1</required>
	</file>
	<length>
		<type>text</type>
		<label>Length (format: 03:54)</label>
		<required>1</required>
	</length>
	<file_desc>
		<type>header</type>
		<label>File Description</label>
	</file_desc>	
	<title>
		<type>text</type>
		<label>Title</label>
		<required>1</required>
	</title>
	<subtitle>
		<type>text</type>
		<label>Subtitle</label>
	</subtitle>
	<description>
		<type>textarea</type>
		<label>Description</label>
	</description>
	<author>
		<type>text</type>
		<label>Owner Name</label>
	</author>
	<date>
		 <type>date</type>
        <label>Date</label>
        <default>today</default>
	</date>
	<keywords>
		<type>textarea</type>
		<label>Keywords</label>
	</keywords>
</array>