<array>
	<id>
		<type>hidden</type>
	</id>
	<status>
		<type>checkbox</type>
		<label>&lt;span class=publish_label&gt;Publish&lt;/span&gt;</label>
		<default>1</default>
	</status>
	<title>
		<type>text</type>
		<label>Action Name</label>
		<required>1</required>
	</title>
	<modin>
		<type>select</type>
		<lookup>forms</lookup>
		<label>Use Form</label>
		<required>1</required>
	</modin>
	<intro_id>
		<type>select</type>
		<lookup>introtexts</lookup>
		<label>Introduction Text</label>
	</intro_id>
	<response_id>
		<type>select</type>
		<lookup>introtexts</lookup>
		<label>Response Page Text</label>
	</response_id>
	<message_id>
		<type>select</type>
		<lookup>introtexts</lookup>
		<label>Default Message to Target</label>
	</message_id>
	<tellfriend_message_id>
		<type>select</type>
		<lookup>introtexts</lookup>
		<label>Tell-a-Friend Message</label>
	</tellfriend_message_id>
	<target_method>
		<type>select</type>
		<label>Targetting Method</label>
		<values>
			<all>Message is sent to all targets</all>
			<choose_single>User must choose one target</choose_single>
			<choose_multiple>User may choose multiple targets</choose_multiple>
		</values>
		<default>all</default>
	</target_method>
	<target_id>
		<type>multiselect</type>
		<size>8</size>
		<label>Choose Targets</label>
		<lookup>
			<module>webAction</module>
			<instance>targets</instance>
		</lookup>
	</target_id>
	<enddate>
		<type>date</type>
		<label>Action Expires</label>
		<default>next month</default>
	</enddate>
</array>
