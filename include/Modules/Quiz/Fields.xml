<array>
	<id>
		<type>hidden</type>
	</id>
	<publish>
		<type>checkbox</type>
		<label>&lt;span class=publish_label&gt;Publish&lt;/span&gt;</label>
		<default>1</default>
	</publish>
	<name>
		<type>text</type>
		<label>Quiz Name</label>
		<required>1</required>
	</name>
	<modin>
		<type>select</type>
		<label>Quiz Form</label>
		<lookup>custom_forms</lookup>
	</modin>
	<question_header>
		<label>Questions</label>
		<type>header</type>
	</question_header>
	<insert_block>
		<type>static</type>
		<default>&lt;div id="related_form_quiz"&gt;&lt;/div&gt;</default>
	</insert_block>
	
	<new_question_header>
		<label>New Question</label>
		<type>header</type>
	</new_question_header>
	<new_question_top>
		<type>button</type>
		<label>Add a Question</label>
		<attr>
			<onClick>RelatedQuestions.save( );</onClick>
			<!--
			<onClick>related_add( this.up( "form"), Array( "question", "explanation", "correct_answer", "answer_1", "answer_2", "answer_3", "answer_4", "answer_5", "answer_6", "answer_7" ), 'quiz' ); related_describe(  this.up( "form"), Array( "question", "explanation", "correct_answer", "answer_1", "answer_2", "answer_3", "answer_4", "answer_5", "answer_6", "answer_7" ), 31, 'quiz');</onClick>
			-->
		</attr>
	</new_question_top>
	<question>
		<type>textarea</type>
		<label>Question</label>
	</question>
	
	<answer_1>
		<type>text</type>
		<label>Answer 1</label>
	</answer_1>
	<answer_2>
		<type>text</type>
		<label>Answer 2</label>
	</answer_2>
	<answer_3>
		<type>text</type>
		<label>Answer 3</label>
	</answer_3>
	<answer_4>
		<type>text</type>
		<label>Answer 4</label>
	</answer_4>
	<answer_5>
		<type>text</type>
		<label>Answer 5</label>
	</answer_5>
<answer_6>
		<type>text</type>
		<label>Answer 6</label>
	</answer_6>
	<answer_7>
		<type>text</type>
		<label>Answer 7</label>
	</answer_7>
	<correct_answer>
		<type>select</type>
		<label>Correct Answer</label>
		<attr><id>correct_answer</id></attr>
	</correct_answer>

	<explanation>
		<type>textarea</type>
		<label>Explanation</label>
	</explanation>
	<new_question>
		<type>button</type>
		<label>Add a Question</label>
		<attr>
			<onClick>RelatedQuestions.save( );</onClick>
			<!--
			<onClick>related_add( this.up( "form"), Array( "question", "explanation", "correct_answer", "answer_1", "answer_2", "answer_3", "answer_4", "answer_5", "answer_6", "answer_7" ), 'quiz' ); related_describe(  this.up( "form"), Array( "question", "explanation", "correct_answer", "answer_1", "answer_2", "answer_3", "answer_4", "answer_5", "answer_6", "answer_7" ), 31, 'quiz');</onClick>
			-->
		</attr>
	</new_question>
	<quiz>
		<type>hidden</type>
	</quiz>
