<array>
    <id>
        <type>hidden</type>
    </id>
    <publish>
        <type>checkbox</type>
        <label>&lt;span class=publish_label&gt;Publish&lt;/span&gt;</label>
    </publish>
    <galleryname>
        <type>text</type>
        <label>Gallery Name</label>
    </galleryname>
    <date>
        <type>date</type>
        <label>Date</label>
        <default>today</default>
    </date>
    <img>
        <type>imagepicker</type>
        <label>Primary Image</label>
    </img>
    <description>
        <type>textarea</type>
        <label>Description</label>
    </description>
    <parent>
        <type>select</type>
        <lookup>
            <module>content</module>
            <instance>galleryMap</instance>
        </lookup>
        <label>Parent Gallery</label>
    </parent>
    <listorder>
        <type>text</type>
        <size>4</size>
        <label>Order</label>
    </listorder>
</array>
