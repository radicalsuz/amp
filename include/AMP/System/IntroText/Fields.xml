<array>
	<id>
		<type>hidden</type>
	</id>
	<modid>
		<type>select</type>
		<label>Module</label>
		<required>1</required>
        <lookup>modules</lookup>
	</modid>
	<name>
		<type>text</type>
		<required>1</required>
		<label>Page Name</label>
	</name>
	<title>
		<type>text</type>
		<label>Title</label>
		<public>1</public>
	</title>
	<subtitle>
		<type>text</type>
		<public>1</public>
		<label>Subtitle</label>
	</subtitle>
	<body>
		<type>wysiwyg</type>
		<label>Body</label>
		<public>1</public>
		<size>20:65</size>
	</body>
	<html>
		<type>checkbox</type>
		<label>The text in this field is pre-formatted as HTML</label>
	</html>
	<type>
		<type>select</type>
		<label>Section</label>
        <lookup>
            <module>content</module>
            <instance>sectionMap</instance>
        </lookup>
	</type>
	<templateid>
		<type>select</type>
		<label>Template</label>
        <lookup>templates</lookup>
	</templateid>
	<searchtype>
		<type>text</type>
		<label>Display Page Link</label>
	</searchtype>
    <list_form_id>
        <type>hidden</type>
    </list_form_id>
</array>
