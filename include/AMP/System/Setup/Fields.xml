<array>
	<id>
		<type>hidden</type>
	</id>

    <web_header>
        <type>header</type>
        <default>Web Settings</default>
    </web_header>

	<websitename>
		<type>text</type>
		<label>Site Name</label>
        <required>1</required>
	</websitename>
	<basepath>
		<type>text</type>
		<label>Site URL</label>
        <required>1</required>
	</basepath>
	<metadescription>
		<type>textarea</type>
		<label>Meta Description</label>
        <size>6:40</size>
	</metadescription>
	<metacontent>
		<type>textarea</type>
		<label>Meta Keywords</label>
        <size>6:40</size>
	</metacontent>

    <system_emails_header>
        <type>header</type>
        <default>System Email Addresses</default>
    </system_emails_header>

	<emendorse>
		<type>text</type>
		<label>User Submitted Article Email</label>
	</emendorse>
	<emfrom>
		<type>text</type>
		<label>Web Admin Alerts From</label>
	</emfrom>
	<emfaq>
		<type>text</type>;
		<label>System administrator Email</label>
        <default>help@radicaldesigns.org</default>
	</emfaq>

    <template_header>
        <type>header</type>
        <default>Template Settings</default>
    </template_header>
	<template>
		<type>select</type>
        <required>1</required>
		<label>Default Template</label>
        <lookup>templates</lookup>
	</template>
    <indextemplate>
		<type>select</type>
        <required>1</required>
		<label>Front Page Template</label>
        <lookup>templates</lookup>
    </indextemplate>

    <photo_header>
        <type>header</type>
        <default>Photo Settings</default>
    </photo_header>
	<optw>
		<type>text</type>
		<label>Optimized Image Width ( wide images )</label>
        <size>6</size>
	</optw>
	<optl>
		<type>text</type>
		<label>Optimized Image Width ( tall images )</label>
        <size>6</size>
	</optl>
	<thumb>
		<type>text</type>
		<label>Thumbnail Image Width</label>
        <size>6</size>
	</thumb>

    <cache_header>
        <type>header</type>
        <label>Cache Settings</label>
    </cache_header>
	<cacheSecs>
		<type>text</type>
		<label>Database Cache Timout ( seconds )</label>
        <size>6</size>
        <default>1</default>
	</cacheSecs>

    <email_header>
        <type>blocktrigger</type>
        <label>Blast Tool Settings</label>
		<block>emailstuff</block>
		<block_trigger>email_tool</block_trigger>
    </email_header>

	<email_tool>
		<type>select</type>
		<label>Email Tool</label>
		<lookup>
			<module>constant</module>
			<instance>blastOptions</instance>
		</lookup>
		<block>emailstuff</block>
	</email_tool>
	<emmedia>
		<type>text</type>
		<label>AMP Email Blast From Address</label>
		<block>emailstuff</block>
	</emmedia>
	<emailfromname>
		<type>text</type>
		<label>AMP Email Blast From Name</label>
		<block>emailstuff</block>
	</emailfromname>
	<dia_header>
		<type>blocktrigger</type>
		<label>DIA Settings</label>
		<block>dia</block>
		<block_trigger>dia_user</block_trigger>
	</dia_header>
	<dia_user>
		<type>text</type>
		<label>DIA User</label>
		<block>dia</block>
	</dia_user>
	<dia_pass>
		<type>password</type>
		<label>DIA Password</label>
		<block>dia</block>
	</dia_pass>
	<dia_key>
		<type>text</type>
		<label>DIA Organization Key</label>
		<block>dia</block>
	</dia_key>
	<dia_slug>
		<type>text</type>
		<label>DIA Organization URL Slug</label>
		<block>dia</block>
	</dia_slug>

    <phplist_header>
        <type>blocktrigger</type>
        <label>PHPlist Settings</label>
		<block>phplist</block>
		<block_trigger>phplist_admin_email</block_trigger>
    </phplist_header>

    <phplist_admin_email>
		<type>text</type>
		<label>PHPlist Admin Email</label>
		<block>phplist</block>
    </phplist_admin_email>
    <phplist_admin_password>
		<type>text</type>
		<label>PHPlist Admin Password</label>
		<block>phplist</block>
    </phplist_admin_password>
	<phplist_bounce_host>
		<type>text</type>
		<label>PHPlist Bounce Host</label>
		<block>phplist</block>
	</phplist_bounce_host>
	<phplist_bounce_user>
		<type>text</type>
		<label>PHPlist Bounce User</label>
		<block>phplist</block>
	</phplist_bounce_user>
	<phplist_bounce_password>
		<type>text</type>
		<label>PHPlist Bounce Password</label>
		<block>phplist</block>
	</phplist_bounce_password>
    <phplist_website>
        <type>text</type>
        <label>PHPlist Website Domain ( no http )</label>
		<block>phplist</block>
    </phplist_website>
    <phplist_domain>
        <type>text</type>
        <label>PHPlist Email Domain</label>
		<block>phplist</block>
    </phplist_domain>
    <phplist_admin_address>
        <type>text</type>
        <label>PHPlist Admin Address</label>
		<block>phplist</block>
    </phplist_admin_address>
    <phplist_report_address>
        <type>text</type>
        <label>PHPlist Report Address</label>
		<block>phplist</block>
    </phplist_report_address>
    <phplist_message_from_address>
        <type>text</type>
        <label>PHPlist Message From Address</label>
		<block>phplist</block>
    </phplist_message_from_address>
    <phplist_message_from_name>
        <type>text</type>
        <label>PHPlist Message From Name</label>
		<block>phplist</block>
    </phplist_message_from_name>
    <phplist_message_replyto_address>
        <type>text</type>
        <label>PHPlist Reply-To Address</label>
		<block>phplist</block>
    </phplist_message_replyto_address>
	<s3_header>
		<type>blocktrigger</type>
		<label>Amazon s3 cache settings</label>
		<block>s3</block>
		<block_trigger>s3_key</block_trigger>
	</s3_header>
	<s3_key>
		<type>text</type>
		<label>Key</label>
		<block>s3</block>
		<size>60</size>
	</s3_key>
	<s3_secret>
		<type>text</type>
		<label>Secret</label>
		<block>s3</block>
		<size>60</size>
	</s3_secret>
	<s3_bucket>
		<type>text</type>
		<label>Bucket</label>
		<block>s3</block>
		<size>60</size>
	</s3_bucket>


</array>
