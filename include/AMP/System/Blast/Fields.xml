<array>
    <id>
        <type>hidden</type>
    </id>
    <blast_type>
        <type>hidden</type>
        <default>System-Email</default>
    </blast_type>
    <passedsql>
        <type>hidden</type>
    </passedsql>
    <status>
        <type>hidden</type>
        <default>New</default>
    </status>
    <subject>
        <label>Subject</label>
        <type>text</type>
    </subject>
    <from_email>
        <label>From Email</label>
        <type>text</type>
    </from_email>
    <from_name>
        <label>From Name</label>
        <type>text</type>
    </from_name>
    <replyto_email>
        <label>Reply To Address</label>
        <type>text</type>
    </replyto_email>
    <modin>
        <type>select</type>
        <label>Recipients</label>
    </modin>
    <messagehtml>
        <label>HTML Email message</label>
        <size>30:60</size>
        <type>wysiwyg</type>
    </messagehtml>
    <messagetext>
        <label>Text Email message</label>
        <size>30:60</size>
        <type>textarea</type>
    </messagetext>
</array>
