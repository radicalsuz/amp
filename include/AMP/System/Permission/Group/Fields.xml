<array>
	<id>
		<type>hidden</type>
	</id>
	<name>
		<type>text</type>
		<label>Group Name</label>
	</name>
    <sectional_header>
        <type>blocktrigger</type>
        <label>Section By Section Access</label>
        <block>sectional</block>
		<block_trigger>sections</block_trigger>
    </sectional_header>
	<root_section_id>
		<type>select</type>
		<label>Root Section</label>
		<block>sectional</block>
		<default>AMP_CONTENT_SECTION_ID_ROOT</default>
        <lookup>sectionMap</lookup>
	</root_section_id>
    <sections>
        <type>checkgroup</type>
        <label>Allowed Sections</label>
        <block>sectional</block>
        <lookup>sectionMap</lookup>
    </sections>
	<settings_header>
		<type>header</type>
		<label>Permissions</label>
	</settings_header>
	<settings>
		<type>checkgroup</type>
		<label>Allowed Permissions</label>
		<attr><style>line-height: 20px;</style></attr>
		<lookup>permissionNames</lookup>
	</settings>
