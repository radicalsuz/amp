<array>
	<id>
		<type>hidden</type>
	</id>
	<usenav>
		<type>checkbox</type>
		<label>&lt;span class=publish_label&gt;Publish&lt;/span&gt;</label>
        <default>1</default>
        <per>CONTENT_PUBLISH</per>
	</usenav>
	<type>
		<type>text</type>
		<label>Section Name</label>
        <required>1</required>
	</type>
	<description>
		<type>textarea</type>
		<label>Description</label>
        <size>6:50</size>
	</description>
	<parent>
		<type>select</type>
		<label>Subsection of</label>
        <lookup>
            <name>section_map</name>
        </lookup>
        <required>1</required>
	</parent>
	<textorder>
		<type>text</type>
        <size>4</size>
		<label>Section Order</label>
	</textorder>
	<route_slug>
		<type>text</type>
		<label>Pretty URL &lt;br /&gt;&lt;span class=photocaption&gt;all lowercase. &lt;br /&gt;use only letters, numbers, dashes&lt;br /&gt;must be unique&lt;/span&gt;</label>
	</route_slug>
    <date_redirect_header>
        <type>blocktrigger</type>
        <label>Date and Redirect</label>
        <block>date_redirect</block>
        <block_trigger>linkurl</block_trigger>
        <block_trigger>date_display</block_trigger>
    </date_redirect_header>
	<linkurl>
		<type>text</type>
		<label>Redirect Section to this URL</label>
        <block>date_redirect</block>
	</linkurl>
	<uselink>
		<type>hidden</type>
        <default>1</default>
		<label>Enable Above Redirect</label>
	</uselink>
	<date2>
		<type>date</type>
		<label>Date</label>
        <default>today</default> 
        <block>date_redirect</block>
	</date2>
	<date_display>
		<type>checkbox</type>
		<label>Display this Date</label>
		<block>date_redirect</block>
	</date_display>
    <security_header>
        <type>blocktrigger</type>
        <label>Security</label>
        <block>security</block>
        <block_trigger>secure</block_trigger>
    </security_header>
	<secure>
		<type>checkbox</type>
        <block>security</block>
		<label>Require Login to View Content</label>
	</secure>
	<custom_data_header>
		<type>hidden</type>
	</custom_data_header>
	<custom1>
		<type>hidden</type>
	</custom1>
	<custom2>
		<type>hidden</type>
	</custom2>
	<custom3>
		<type>hidden</type>
	</custom3>
	<custom4>
		<type>hidden</type>
	</custom4>
    <listing_settings_header>
        <type>header</type>
        <label>List Page Options</label>
    </listing_settings_header>
	<listtype>
		<type>select</type>
		<label>Display Format</label>
        <lookup>listtypes</lookup>
        <default>1</default>
	</listtype>
	<up>
		<type>text</type>
        <size>4</size>
		<label>Max Items per Page</label>
	</up>
	<usetype>
		<type>checkbox</type>
		<label>Hide Content List</label>
	</usetype>
    <section_header_options_header>
        <type>blocktrigger</type>
        <label>Section Header</label>
        <block>section_header_options</block>
        <block_trigger>url</block_trigger>
    </section_header_options_header>
	<header>
        <default>1</default>
		<type>checkbox</type>
		<label>Use Section Header</label>
        <block>section_header_options</block>
	</header>
	<url>
		<type>select</type>
		<label>Use This Article &lt;BR /&gt;as Section Header</label>
        <block>section_header_options</block>
        <lookup>
            <module>content</module>
            <instance>articles</instance>
        </lookup>
	</url>
    <header_custom_method>
        <type>text</type>
        <label>Custom Function</label>
        <block>section_header_options</block>
    </header_custom_method>
	<logic_header>
		<type>blocktrigger</type>
        <label>List Contents</label>
        <block>list_contents</block>
	</logic_header>
	<list_is_global>
		<default>0</default>
		<type>checkbox</type>
		<label>List Content &lt;BR /&gt;from Entire Site</label>
		<block>list_contents</block>
	</list_is_global>
	<list_sort>
		<default>ordered</default>
		<label>Sort By</label>
		<lookup>list_sort_options_text</lookup>
		<type>select</type>
		<block>list_contents</block>
	</list_sort>
	<list_by_custom>
		<type>hidden</type>
	</list_by_custom>
	<filter>
		<type>select</type>
		<label>Default Filter</label>
		<lookup>filters</lookup>
		<block>list_contents</block>
	</filter>
	<list_by_class>
		<type>multiselect</type>
		<label>Show Content from &lt;BR /&gt; these Classes</label>
		<block>list_contents</block>
		<lookup>classes</lookup>
		<size>15</size>
	</list_by_class>
	<list_by_tag>
		<type>multiselect</type>
		<size>15</size>
		<label>Show Content from &lt;BR /&gt; these Tags</label>
		<block>list_contents</block>
		<lookup>tags</lookup>
	</list_by_tag>
	<list_by_section>
		<type>multiselect</type>
		<size>15</size>
		<label>Show Content from &lt;BR /&gt; these Sections</label>
		<block>list_contents</block>
		<lookup>sectionMap</lookup>
	</list_by_section>
    <search_header>
        <type>blocktrigger</type>
        <label>Search Form</label>
        <block>search_block</block>
        <block_trigger>search_display </block_trigger>
    </search_header>
	<search_display>
		<type>checkbox</type>
		<label>Show Search Form</label>
        <block>search_block</block>
	</search_display>
    <search_custom>
        <type>text</type>
        <label>Search Display&lt;br /&gt;&lt;span class=photocaption&gt;enter xml file or custom function&lt;/span&gt;</label>
        <block>search_block</block>
    </search_custom>
    <appearance_header>
        <type>header</type>
        <label>Appearance</label>
    </appearance_header>
    <images_header>
        <type>blocktrigger</type>
        <label>Images</label>
        <block>images</block>
        <block_trigger>image2</block_trigger>
        <block_trigger>flash</block_trigger>
    </images_header>
	<image2>
		<type>imagepicker</type>
		<label>Image for lists</label>
        <block>images</block>
	</image2>
	<flash>
		<type>imagepicker</type>
		<label>Image for Banner</label>
        <block>images</block>
	</flash>
    <!-- no clue if these are still being used
	<image>
		<type>imagepicker</type>
		<label>Image for display in sidebar listings</label>
        <block>images</block>
	</image>
	<useimage>
		<type>checkbox</type>
		<label>Use this image</label>
        <block>images</block>
	</useimage> 
    -->
    <template_css_header>
        <type>blocktrigger</type>
        <label>Template, CSS, Layout</label>
        <block>template_css</block>
        <block_trigger>templateid</block_trigger>
        <block_trigger>css</block_trigger>
        <block_trigger>item_custom_method</block_trigger>
    </template_css_header>
	<templateid>
		<type>select</type>
		<label>Template</label>
        <lookup>templates</lookup>
        <block>template_css</block>
	</templateid>
	<css>
		<!--
		<type>multiselect</type>
        <size>6</size>
		-->
		<type>text</type>
		<label>Override with CSS files</label>
        <block>template_css</block>
	</css>
    <item_custom_method>
        <type>text</type>
        <label>Custom List Item Layout function</label>
        <block>template_css</block>
    </item_custom_method>
    <!--
	<imgcap>
		<type>textarea</type>
		<label>Custom Data</label>
	</imgcap>
    -->

</array>
