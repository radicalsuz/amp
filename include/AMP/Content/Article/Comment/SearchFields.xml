<array>
    <article_id>
        <type>select</type>
        <label>Find by Article</label>
        <lookup>
            <module>content</module>
            <instance>articles</instance>
        </lookup>
        <attr>
            <onChange>this.form.elements['cid'].value = this.value</onChange>
        </attr>
     </article_id>
     <modin>
        <separator>newrow</separator>
        <type>select</type>
        <label>Find by Form</label>
        <lookup>forms</lookup>
     </modin>
     <status>
        <type>select</type>
        <label>Search Status</label>
        <values>
            <key>0</key><value>Draft</value>
        </values>
        <values>
            <key>1</key><value>Live</value>
        </values>
        <values>
            <key>2</key><value>Spam</value>
        </values>
     </status>
     <cid>
        <type>hidden</type>
     </cid>
</array>
