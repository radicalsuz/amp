<id>
    <type>text</type>
    <size>5</size>
    <label>ID</label>
    <attr><class>searchform_element</class></attr>
</id>
<title>
    <label>Title</label>
    <type>text</type>
    <size>25</size>
    <attr>
		<class>searchform_element</class>
		<id>title</id>
	</attr>
	<template>
		{element}
		&lt;div class="auto_complete" id="title_list"&gt;&lt;/div&gt;
	</template>
</title>
<author>
    <label>Author</label>
    <size>20</size>
    <type>text</type>
    <attr>
		<class>searchform_element</class>
		<id>author</id>
	</attr>
	<template>
		{element}
		&lt;div class="auto_complete" id="author_list"&gt;&lt;/div&gt;
	</template>
</author>
<section>
    <separator>newrow</separator>
    <type>select</type>
    <label>Select Section</label>
    <attr><class>searchform_element</class></attr>
	<lookup>
		<module>content</module>
		<instance>sectionMap</instance>
	</lookup>
</section>
<class>
    <type>select</type>
    <label>Select Class</label>
    <attr><class>searchform_element</class></attr>
	<lookup>
		<module>content</module>
		<instance>activeClasses</instance>
	</lookup>
</class>
<search_by_date>
    <separator>newrow</separator>
    <type>checkbox</type>
    <label>Find Items by Date</label>
    <attr><class>searchform_element</class></attr>
</search_by_date>
<date>
    <type>date</type>
    <default>last year</default>
    <label>After: </label>
    <attr><class>searchform_element</class></attr>
</date>
<type>
	<type>hidden</type>
</type>
<publish>
    <label>Status</label>
    <type>select</type>
	<lookup>
		<module>constant</module>
		<instance>status</instance>
	</lookup>
</publish>
</array>
