<array>
	<id>
		<type>hidden</type>
	</id>
	<title>
		<type>text</type>
		<label>Feed Title</label>
	</title>
	<description>
		<type>textarea</type>
		<label>Feed Description</label>
	</description>
	<criteria_header>
		<type>header</type>
		<label>Feed Conditions</label>
	</criteria_header>
	<class_id>
		<type>select</type>
		<label>Feed from content in this class</label>
		<lookup>
			<module>content</module>
			<instance>classes</instance>
		</lookup>
	</class_id>
	<section_id>
		<type>select</type>
		<label>Feed from content in this section</label>
		<lookup>
			<module>content</module>
			<instance>sectionMap</instance>
		</lookup>
	</section_id>
	<sqlwhere>
		<type>textarea</type>
		<label>SQL WHERE clause</label>
	</sqlwhere>
	<combine_logic>
		<type>select</type>
		<label>Combine feed criteria</label>
		<values>
			<and>Narrow further with each</and>
			<or>Expand to include each</or>
		</values>
        <default>and</default>
	</combine_logic>
	<orderbysql>
		<type>select</type>
		<label>Sort By</label>
		<values>
			<date>Date</date>
			<title>Title</title>
			<updated>Date Updated</updated>
		</values>
	</orderbysql>
	<orderbyorder>
		<type>select</type>
		<label>Sort Direction</label>
		<values>
			<asc>Ascending</asc>
			<desc>Descending</desc>
		</values>
	</orderbyorder>
	<sqllimit>
		<type>text</type>
		<label>Max Items in Feed</label>
		<size>6</size>
	</sqllimit>
	<include_full_content>
		<type>checkbox</type>
		<label>Include Complete Content</label>
	</include_full_content>

</array>
